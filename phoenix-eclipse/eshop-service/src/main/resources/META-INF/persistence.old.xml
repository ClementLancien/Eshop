<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="eshop" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	<class>com.infotel.eshop.model.ProductFamily</class>
    	<class>com.infotel.eshop.model.ItemCounter</class>
    	<class>com.infotel.eshop.model.Product</class>
    	<class>com.infotel.eshop.model.User</class>
    	<class>com.infotel.eshop.model.Customer</class>
    	<class>com.infotel.eshop.model.Employee</class>
    	<class>com.infotel.eshop.model.ProductImage</class>
    	<class>com.infotel.eshop.model.CustomerDetail</class>
    	<class>com.infotel.eshop.model.Movie</class>
    	<class>com.infotel.eshop.model.Book</class>
    	<class>com.infotel.eshop.model.Album</class>
    	<class>com.infotel.eshop.model.Figure</class>
    	<class>com.infotel.eshop.model.ProductTag</class>
    	<properties>
    		<property name="javax.persistence.jdbc.driver"
    				  value="com.mysql.jdbc.Driver"/>
    		<property name="javax.persistence.jdbc.url"
    				  value="jdbc:mysql://localhost:3306/eshop?useSSL=false"/>
    		<property name="javax.persistence.jdbc.user" value="scott"/>
    		<property name="javax.persistence.jdbc.password" value="tiger"/>
    		<property name="hibernate.show_sql" value="true"/>
    		<property name="hibernate.format_sql" value="true"/>
    	</properties>
    </persistence-unit>
</persistence>